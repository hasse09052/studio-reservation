<!DOCTYPE html>
<html>
  <head>
    <title>StudioReservation</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <figure><a href="/"><img src="https://placehold.jp/50x50.png" alt="ロゴ画像(トップリンク)"></a></figure>
      <nav>
        <ul>
          <% if logged_in? %>
            <li><%= link_to("編集", edit_user_path( id: current_user.id )) %></li>
            <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
          <% else %>
            <li><%= link_to("新規登録", new_user_path) %></li>
            <li><%= link_to("ログイン", login_path) %></li>
          <% end %>
        </ul>
      </nav>
    </header>

    <%# フラッシュメッセージ用 %>
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
    <% end %>

    <%# メイン %>
    <%= yield %>

    <%# デバッグ %>
    <%= debug(params) if Rails.env.development? %>
    
  </body>
</html>
