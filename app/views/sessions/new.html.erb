<div class="p-background -music">

  <div class="l-userForm c-formBox p-userForm">
    <h1 class="p-userForm__title">Login</h1>

    <%= form_with url: login_path, class: "p-userForm__formWrap", local: true do |form| %>
      <div class="p-userForm__inputWrap">
        <%= form.label :email, "メールアドレス:", class: "p-userForm__label" %>
        <%= form.text_field :email, class: "p-userForm__input" %>
      </div>

      <div class="p-userForm__inputWrap">
        <%= form.label :password, "パスワード:", class: "p-userForm__label" %>
        <%= form.password_field :password, class: "p-userForm__input" %>
      </div>
        
      <%= form.submit "ログイン", class: "c-button -blue p-userForm__btn" %>
    <% end %>
  </div>
  
</div>